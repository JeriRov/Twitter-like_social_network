<%= stylesheet_link_tag "profile", "data-turbo-track": "reload" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="profile block pt-5">
    <div class="profile-picture big-profile-picture clear">
      <%= image_tag(current_user.avatar_thumbnail) %>
    </div>
    <h1 class="user-name"><%=current_user.first_name %> <%=current_user.last_name %></h1>

    <div class="profile-description">
      <div class="d-flex justify-content-center" >
        <span class="btn btn-dark btn-file">
          Change avatar<%= f.file_field :avatar, class:''%>
        </span>
      </div>
    </div>
  </div>
  <div class="container bg-dark p-4 rounded text-config">
    <div class="row justify-content-between">
      <div class="col-md-6 blog-main">



        <div class="field">
          <strong>Username</strong>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", :class => 'form-control', :placeholder=>'Username'%><br/>
        </div>

        <div class="field">
          <strong>Email</strong>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: 'form-control', placeholder:'Email' %><br/>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        <% end %>
        <div class="field">
          <strong>Current password</strong><br/>
          (we need your current password to confirm your changes)<br/>
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control', placeholder:'Current password' %><br/>
        </div>

        <div class="actions">
          <%= f.submit "Update", class:'btn btn-success' %><br/>
        </div>
      </div>
      <aside class="col-md-6 ">
        <div class="p-1 pt-0 mb-0 w-100 d-flex flex-row justify-content-between">
          <div class="d-flex flex-column w-100">
            <div class="field">
              <strong>First name</strong>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :class => 'form-control', :placeholder=>'First name'%><br/>
            </div>

            <div class="field">
              <strong>Last name</strong>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control', placeholder:'Last name'%><br/>
            </div>
          </div>
        </div>
      </aside>
<% end %>
</div>
</div>