<%= stylesheet_link_tag "login", "data-turbo-track": "reload" %>
<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"%>
<title>Shade - Login</title>
<%= favicon_link_tag 'ico.png' %>

<section class="fill_screen background-radial-gradient overflow-hidden" style="position: fixed">

  <div class="container px-4 py-5 px-md-5 text-center text-lg-start center_screen">
    <div class="row gx-lg-5 align-items-center mb-5" style="width: 95%;">
      <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
        <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
          The best social network<br />
          <span style="font-size: .9em; color: hsl(218, 81%, 75%)">for you and your friends</span>
        </h1>
        <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
        </p>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
        <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
        <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>
        <div id="radius-shape-3" class="position-absolute shadow-5-strong"></div>

        <div class="card bg-glass">
          <div class="card-body px-4 py-4 px-md-5">

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <h1 class="display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%); text-align: center">
                <span style="color: hsl(230, 100%, 75%)">Login</span>
              </h1>
              <!-- Email input -->
              <div class="form-outline mb-4">
                <%= f.email_field :email, :class=>"form-control", :placeholder=>'Email address'%>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <%= f.password_field :password, :class => 'form-control', :placeholder=>'Password'%>
              </div>

              <div class="log-items-style">
                <!-- Checkbox -->
                <div class="form-check d-flex justify-content-left mb-2">
                  <% if devise_mapping.rememberable? %>
                    <div class="question-links">
                      <div class="field">
                        <%= f.check_box :remember_me, :class => "form-check-input me-2" %>
                        <%= f.label :remember_me %>
                      </div>
                    </div>
                  <% end %>
                </div>
                <div class="log-buttons-style">
                  <!-- Submit button -->
                  <button style="--content: 'Login'; font-family: 'Source Code Pro',serif">
                    <div class="left"></div>
                    Login
                    <div class="right"></div>
                  </button>
                  <br/>
            <%end%>

            <label for="main-navigation-toggle">
              <div class="center">
                <a class="btn" style="background-color: rgba(30,45,71,0.63); display: table-cell;">
                  <svg width="90px" height="45px" viewBox="0 0 90 45" class="border">
                    <polyline points="89,1 89,44 1,44 1,1 89,1" class="bg-line" />
                    <polyline points="89,1 89,44 1,44 1,1 89,1" class="hl-line" />
                  </svg>
                  <span>Sign up</span>
                </a>
              </div>
            </label>
            </div>
            </div>
            <br/>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>



<input type="checkbox" id="main-navigation-toggle" class="btn btn--close" title="Toggle main navigation" />

<div id="main-navigation" class="nav-main">
  <div class="menu">
    <div class="menu__item">
      <div class="container px-4 py-5 px-md-5 text-center text-lg-start center_screen">
        <div class="row gx-lg-5 align-items-center mb-5" style="width: 100%;">

          <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
            <div id="radius-shape-4" class="position-absolute rounded-circle shadow-5-strong"></div>
            <div id="radius-shape-5" class="position-absolute shadow-5-strong"></div>
            <div id="radius-shape-6" class="position-absolute shadow-5-strong"></div>
            <div class="card bg-glass">
              <div class="card-body px-5 pt-4 py-4 px-md-5" >

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                  <h1 class="display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%); text-align: center">
                    <span style="color: #324688">Sign up</span>
                  </h1>

                  <!-- 3 column grid layout with text inputs for the first and last names -->
                  <div class="row">
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :class => 'form-control', :placeholder=>'First name'%>
                      </div>
                    </div>
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", :class => 'form-control', :placeholder=>'Last name'%>
                      </div>
                    </div>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.text_field :username, autofocus: true, autocomplete: "username", :class => 'form-control', :placeholder=>'Username'%>
                  </div>
                  <!-- Email registration input -->
                  <div class="form-outline mb-4">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control', :placeholder=>'Email'%>
                  </div>

                  <!-- Password registration input -->
                  <div class="form-outline mb-4">
                    <%= f.password_field :password, autocomplete: "new-password", :class => 'form-control', :placeholder=>'Password' %>
                  </div>

                  <!-- Confirm password registration input -->
                  <div class="form-outline mb-4">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password",
                                         :class => 'form-control', :placeholder=>'Confirm password'%>
                  </div>

                  <div class="reg-items-style">
                    <!-- Registration checkbox -->
                    <div class="form-check d-flex justify-content-left mb-4">
                      <div class="field">
                        <%= check_box "", "Usage agreements", :class => "form-check-input me-2" %>
                        <%= label nil, "Usage agreements" %>
                      </div>
                    </div>

                    <!-- Submit registration -->
                    <div class="sign_up_items">
                      <button style="--content: 'Sign up'; font-family: 'Source Code Pro',serif; ">
                        <div class="left"></div>
                        Sign up
                        <div class="right"></div>
                      </button>
                      <br/>
                <% end %>

                <label for="main-navigation-toggle">
                  <div class="center">
                    <a class="btn" style="background-color: rgba(30,45,71,0.63); display: table-cell;">
                      <svg width="90px" height="45px" viewBox="0 0 90 45" class="border">
                        <polyline points="89,1 89,44 1,44 1,1 89,1" class="bg-line" />
                        <polyline points="89,1 89,44 1,44 1,1 89,1" class="hl-line" />
                      </svg>
                      <span>Log in</span>
                    </a>
                  </div>
                </label>
                </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
            <% if resource.errors.any? %>
              <div class="small card  p-4 errors" style="background-color: rgba(246,0,0,0.51); color: white"><%= render "devise/shared/error_messages", resource: resource %></div>
            <% end %>">
            <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
              Try and see for yourself<br/>
              <span style="font-size: .9em; color: hsl(218, 81%, 75%)">the quality and steepness</span>
            </h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

