<div id="<%= dom_id friend %>" class="p-2">
  <%= link_to user_profile_path(friend.friend), class: 'friend-link' do %>
    <div class="bg-dark rounded p-2 pt-1">
      <div class=""><%=image_tag @user[friend.friend-1].avatar, class:"friend-img rounded flex-shrink-0 me-2 bd-placeholder-img" %></div>
      <div class="friend-info">
        <h4><%=@user[friend.friend-1].username %></h4>
        <p><%= @user[friend.friend-1].posts.size %> <% if @user[friend.friend-1].posts.size == 1%> post <% else %> posts <%end %></p>
      </div>
  <%end %>
  </div>
</div>

