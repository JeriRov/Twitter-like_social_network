<div class="cont-<%=message.user.id%>">
  <div class="message-box msg-<%= message.user.id %>">

    <div class="d-flex alight-items-center">
      <%= image_tag(message.user.avatar, class:"rounded bg-dark mx-1", style:"width: 32px; height: 32px;")%>
      <div>
        <h6 class="name">
          <%= message.user.username %>
        </h6>
        <p class="time"> <%= time_ago_in_words(message.created_at) %> ago</p>
      </div>
    </div>
    <%= message.body %>
  </div>
</div>